{% extends 'base.html.twig' %}

{% block title %}Mon profile{% endblock %}

{% block body %}

<div class="container">
    <h1 class="mt-4">{{ controller_name }} ✅</h1>

    <div class="content profile mt-5">
        <div class="avatar mb-5">
            <img src="{{ asset('avatar/' ~ app.user.avatar) }}" alt="{{ app.user.avatar }}">
            <a class="item-avatar" href="{{ path('app_profile_edit_avatar') }}"><i class="fa-solid fa-camera"></i></a>
        </div>

        <ul class="contain">
            {% if app.user %}
                <li><strong>Nom</strong> <span class="item">{{ app.user.lastname }}</span></li>
                <li><strong>Prénom</strong> <span class="item">{{ app.user.firstname }}</span></li>
                <li><strong>Email</strong> <span class="item">{{ app.user.email }}</span></li>
                <li><strong>Mot de passe</strong> <span class="item">***************</span></li>
            {% endif %}
        </ul>

        <div class="edit">
            <div class="btn btn-info btn-sm">
                <a href="{{ path('app_profile_edit') }}">Modifier le profile</a>
            </div>
            <div class="btn btn-danger btn-sm">
                <a href="#">Supprimer le profile</a>
            </div>
        </div>
    </div>
</div>

{% endblock %}
